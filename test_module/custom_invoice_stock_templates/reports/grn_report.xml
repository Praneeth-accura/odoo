<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_grn_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page">
                    <div class="row" name="customer_address" style="padding-top:10px;">
                        <div class="col-xs-4 pull-left">
                            <table>
                                <thead>
                                <tr style="border: 1px solid black;padding:10px; width=100"  width="100%">
                                    <td colspan="2" align="center" ><strong style="font-size: 17px;padding:10px;vertical-align:middle;">SUPPLIER</strong></td>

                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;padding:5px;" >Name :</td>
                                    <td style="border: 1px solid black;padding:5px;">
                                        <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;padding:5px;" >Address :</td>
                                    <td style="border: 1px solid black;padding:5px;">
                                        <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                    </td>
                                </tr>
                                </thead>
                            </table>

                        </div>
                         <table class="col-xs-4 pull-right">
                             <thead>

                            <tr style="border: 1px solid black;padding:10px;">
                                <td align="center" colspan="2"><strong style="font-size: 17px;vertical-align:middle;" >GOOD RECEIVED NOTE</strong></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black;padding:5px;">Date:</td>
                                <td name="td_sched_date" style="border: 1px solid black;padding:5px;">
                                    <t t-if="o.state == 'done'">
                                        <span t-field="o.date_done"/>
                                    </t>
                                    <t t-if="o.state != 'done'">
                                        <span t-field="o.scheduled_date"/>
                                    </t>
                                </td>
                            </tr>
                             <tr>
                                <td style="border: 1px solid black;padding:5px;">Purchase Order No:</td>
                                  <td t-if="o.origin"  style="border: 1px solid black;padding:5px;">
                                    <span t-field="o.origin"/>
                                </td>
                            </tr>
                             <tr>
                                <td style="border: 1px solid black;padding:5px;">Bill No:</td>
                                 <td style="border: 1px solid black;padding:5px;"><span t-field="o.name"/></td>
                            </tr>

                             </thead>
                        </table>
                    </div>

                    <table class="table table-condensed mt48" t-if="o.state!='done'">
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;padding:5px;"><strong>Description</strong></th>
                                <th style="border: 1px solid black;padding:5px;"><strong>UOM</strong></th>
                                <th style="border: 1px solid black;padding:5px;"><strong>Order Qty</strong></th>
                                <th style="border: 1px solid black;padding:5px;"><strong>Delivery Qty</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.product_uom_qty"/>
                                </td>
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.quantity_done"/>
                                </td>
                            </tr>


                        </tbody>
                    </table>
                    <table>
                         <tr>
                             <td><strong>Remarks :</strong></td>
                               <td><span t-field="o.note"/></td>
                            </tr>
                    </table>
                    <br></br>
                    <br></br>
                    <br></br>
                <table width="100%">

                    <tr style="text-align:center;vertical-align:middle;">
                        <td><strong>Received By</strong></td>
                        <td><strong>Inspected By</strong></td>
                        <td><strong>Authorized By</strong></td>
                    </tr>
                    <tr style="text-align:center;vertical-align:middle;">
                       <td>.........................</td>
                        <td>.........................</td>
                        <td>.........................</td>
                    </tr>

                    </table>
                    <table class="table table-condensed mt48" t-if="o.move_line_ids and o.state=='done'">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_production_lot"/>
                        <thead>
                            <tr>
                                <th><strong>Product</strong></th>
                                <th name="lot_serial" t-if="has_serial_number">
                                    Lot/Serial Number
                                </th>
                                <th class="text-center"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <t t-if="has_serial_number">
                                    <td>
                                        <table width="100%">
                                            <tr>
                                                <td>
                                                    <span t-field="move_line.lot_id"/>
                                                    <t t-if="not move_line.lot_id">
                                                        <span t-field="move_line.lot_name"/>
                                                    </t>
                                                </td>
                                                <td name="lot_qty">
                                                    <t t-if="move_line.product_qty">
                                                        <span t-field="move_line.product_qty"/>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </t>
                                <td class="text-center">
                                    <span t-field="move_line.qty_done"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p t-if="o.backorder_id">
                        This shipment is a backorder of <t t-esc="o.backorder_id.name"/>.
                    </p>
                    <p>
                        <t t-if="o.search([('backorder_id', '=', o.id), ('state', 'not in', ['cancel', 'done'])])">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                </div>
            </t>
        </t>
    </template>

    <template id="report_grn">
        <t t-foreach="docs" t-as="o">
            <t t-call="custom_invoice_stock_templates.report_grn_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>

    <template id="report_grn_document_inherit_product_expiry" inherit_id="custom_invoice_stock_templates.report_grn_document">
        <xpath expr="//th[@name='lot_serial']" position="inside">
            <t t-if="any([move_lines.lot_id.use_date for move_lines in o.move_line_ids])">
                <span class="pull-right">Expiry Date</span>
            </t>
        </xpath>
        <xpath expr="//td[@name='lot_qty']" position="after">
            <td>
                <span class="pull-right" t-field="move_line.lot_id.use_date" t-field-options='{"widget": "date"}'/>
            </td>
        </xpath>
    </template>

    <template id="report_grn_document_inherit_sale_stock" inherit_id="custom_invoice_stock_templates.report_grn_document">
        <xpath expr="//div[@name='customer_address']" position="after">
            <div class="row" t-if="o.sudo().sale_id.client_order_ref">
                <div class="col-xs-4 pull-right">
                    <strong>Customer Reference:</strong>
                    <p t-field="o.sudo().sale_id.client_order_ref"/>
                </div>
            </div>
        </xpath>
    </template>

    <template id="report_grn_document_inherit_product_expiry" inherit_id="custom_invoice_stock_templates.report_grn_document">
        <xpath expr="//th[@name='lot_serial']" position="inside">
            <t t-if="any([move_lines.lot_id.use_date for move_lines in o.move_line_ids])">
                <span class="pull-right">Expiry Date</span>
            </t>
        </xpath>
        <xpath expr="//td[@name='lot_qty']" position="after">
            <td>
                <span class="pull-right" t-field="move_line.lot_id.use_date" t-field-options='{"widget": "date"}'/>
            </td>
        </xpath>
    </template>

    <report
            string="GRN"
            id="action_grn"
            model="stock.picking"
            report_type="qweb-pdf"
            name="custom_invoice_stock_templates.report_grn"
            file="custom_invoice_stock_templates.report_grn"
            print_report_name="'GRN - %s - %s' % (object.partner_id.name or '', object.name)"
    />
</odoo>