<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="delivery_report_inherit" inherit_id="stock.report_delivery_document">
     <xpath expr="//div[@class='page']" position="replace">
         <div class="row" style="padding-top:10px;">
             <div class="col-md-4  pull-left">
            <table>
                <t t-set="doc" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <thead>
                    <tr style="border: 1px solid black;padding:10px; width=100"  width="100%">
                        <td colspan="2" ><strong style="font-size: 17px;padding:10px;text-align:center;vertical-align:middle;">Shipping Address</strong></td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Name :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                                <span t-esc="partner"
                                   t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Telephone :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                                <span t-esc="partner"
                                   t-options='{"widget": "contact", "fields": ["phone"], "no_marker": True}'/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Address :</td>
                        <td style="border: 1px solid black;padding:5px;">
                                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                                <span t-esc="partner"
                                   t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </td>
                    </tr>
                </thead>
            </table>
        </div>
              <div class="col-md-4 pull-left ">
            <table>
                <thead>
                    <tr style="border: 1px solid black;padding:10px; width=100"  width="100%">
                        <td colspan="2" ><strong style="font-size: 17px;padding:10px;text-align:center;vertical-align:middle;">Invoice Address</strong></td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Name :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                                <span t-esc="partner"
                                   t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Telephone :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                                <span t-esc="partner"
                                   t-options='{"widget": "contact", "fields": ["phone"], "no_marker": True}'/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Address :</td>
                        <td style="border: 1px solid black;padding:5px;">
                                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                                <span t-esc="partner"
                                   t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </td>
                    </tr>
                </thead>
            </table>
        </div>

            <div class="col-md-4 pull-right">
            <table>
                <thead>
                    <tr style="border: 1px solid black;padding:10px; width=100"  width="100%">
                        <td colspan="2" ><strong style="font-size: 17px;padding:10px;vertical-align:middle;" class="text-center">DELIVERY NOTE</strong></td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Delivery Note Number :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <span t-field="o.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Dispatch Date :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <span t-field="o.scheduled_date"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Invoice No :</td>
                        <td style="border: 1px solid black;padding:5px;">

                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;padding:5px;" >Order No :</td>
                        <td style="border: 1px solid black;padding:5px;">
                            <span t-field="o.origin"/>
                        </td>
                    </tr>
                </thead>
            </table>
        </div>
         </div>

         <div class="row">
              <table class="table table-condensed mt48" t-if="o.state!='done'">
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;padding:5px;"><strong>Description</strong></th>
                                <th style="border: 1px solid black;padding:5px;"><strong>UOM</strong></th>
                                <th style="border: 1px solid black;padding:5px;"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move" style="border: 1px solid black;padding:5px;">
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td style="border: 1px solid black;padding:5px;">
                                    <span t-field="move.product_uom_qty"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
         </div>
          <table width="100%" >
                  <tr style="vertical-align:middle;">
                      <td width="25%">Delivered by :</td>
                      <td width="25%">.........................</td>
                       <td width="25%">Received by :</td>
                      <td width="25%">.........................</td>
                  </tr>
                   <tr style="vertical-align:middle;">
                      <td>Date :</td>
                      <td>.........................</td>
                       <td>Date :</td>
                      <td>.........................</td>
                  </tr>

          </table>
         <br></br>
         <table>
             <tr>
                 <td colspan="2">Title of goods remains the property of the company name until payment has been received in full.</td>
             </tr>
         </table>
     </xpath>
    </template>

</odoo>