<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_order_template" inherit_id="purchase.report_purchaseorder_document">
     <xpath expr="//div[@class='page']" position="replace">
         <div class="row" style="padding-top:10px;">

            <div class="oe_structure"/>
            <div class="row">


                <div class="col-xs-5"  style="padding-bottom: 10px;">
                    <br></br>

                     <table border="1">
                        <tr style="border: 1px solid black;padding:5px;">
                            <td style="border: 1px solid black;padding:5px;">
                                 <strong style="font-size: 17px;">To:</strong>
                                <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["name", "address"], "no_marker": True, "phone_icons": True}'/>
                            </td>
                        </tr>
                    </table>

                </div>
              <div class="col-xs-5 col-xs-offset-1 pull-left">
                    <br></br>
                    <table >
                        <tr>
                            <td style="border: 1px solid black;text-align:center" colspan="2">
                                <strong style="font-size: 17px;; padding:5px;" align="center" >Request for Quotation</strong>
                            </td>
                        </tr>
                        <tr style="border: 1px solid black">
                            <td style="border: 1px solid black; padding:5px; " width="50%">Date:</td>
                            <td style="border: 1px solid black; padding:5px;" width="50%"><p t-field="o.date_order"/></td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black; padding:5px;" width="50%">RFQ No:</td>
                            <td style="border: 1px solid black; padding:5px;" width="50%"><p t-field="o.name"/></td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black; padding:5px;" width="50%">Vendor Reference:</td>
                            <td style="border: 1px solid black; padding:5px;" width="50%"><p t-field="o.partner_ref"/></td>
                        </tr>
                    </table>

                </div>

            </div>

            <br></br><br></br>
            <table class="table table-condensed" style="padding-top:20px;">
                <thead>
                    <tr>
                        <th style="border: 1px solid black;padding:5px;"><strong>Description</strong></th>
                        <th style="border: 1px solid black;padding:5px;" class="text-right"><strong>Qty</strong></th>
                        <th style="border: 1px solid black;padding:5px;" class="text-center"><strong>U/M</strong></th>
                        <th style="border: 1px solid black;padding:5px;" class="text-right"><strong>Rate</strong></th>
                        <th style="border: 1px solid black;padding:5px;" class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td style="border: 1px solid black;padding:5px;">
                            <span t-field="line.name"/>
                        </td>

                        <td style="border: 1px solid black;padding:5px;" class="text-right">
                            <span t-field="line.product_qty"/>
                        </td>
                        <td style="border: 1px solid black;padding:5px;">
                             <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td style="border: 1px solid black;padding:5px;" class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td style="border: 1px solid black;padding:5px;" class="text-right">
                            <span t-field="line.price_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 ">
                    <table>
                        <tr>
                            <td style="padding:5px;"><strong>Remarks :</strong></td>
                            <td style="padding:5px;"><span t-field="o.notes"/></td>
                        </tr>
                        <tr>
                            <td  style="padding:5px;"><strong>Mode Of Shipping  :</strong></td>
                            <td  style="padding:5px;">  <p t-field="o.mode_of_shipping"/></td>
                        </tr>
                         <tr>
                             <td  style="padding:5px;"><strong>Pricing Method :</strong></td>
                            <td  style="padding:5px;"><p t-field="o.pricing_method"/></td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-4 pull-right" >
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
               <br></br>
               <br></br>
            <div class="row">
              <table width="100%" style="margin-left :50px;">
                      <tr style="vertical-align:middle;">
                          <td width="33%">.........................</td>
                          <td width="33%">.........................</td>
                          <td width="33%">.........................</td>
                      </tr>
                       <tr style="vertical-align:middle;">
                          <td  width="33%">Prepared by</td>
                           <td  width="33%">Verified by</td>
                           <td  width="33%">Approved by</td>
                      </tr>

              </table>
        </div>
         </div>
     </xpath>
    </template>
</odoo>