<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <record id="report_xlsx_wizard_form_inherit" model="ir.ui.view">
	        <field name="name">report.xlsx.wizard.form.inherit</field>
	        <field name="model">report.xlsx.wizard</field>
	        <field name="inherit_id" ref="os_hr_epf_etf.report_xlsx_wizard_form"/>
	        <field name="arch" type="xml">
	        	<data>
		        	<xpath expr="//field[@name='date_to']" position="after">
		        		<field name="paysheet_type" widget="radio" attrs="{'invisible': [('report_type','!=','payroll')]}"></field>
		        		<field name="employee_id" attrs="{'invisible': ['|',('report_type','!=','payroll'),('paysheet_type','!=','selected')],
		        										  'required': [('paysheet_type','=', 'selected')]}"></field>
		        		<field name="batch_id" attrs="{'invisible': ['|',('report_type','!=','payroll'),('paysheet_type','!=','batch')],
		        									   'required': [('paysheet_type','=', 'batch')]}"></field>
		        		<field name="month" attrs="{'invisible': ['|',('report_type','!=','payroll'),('paysheet_type','=','batch')]}"></field>
						<field name="previous_batch_id" attrs="{'invisible': ['|',('report_type','!=','payroll'),('paysheet_type','!=','batch')],
		        									   'required': [('paysheet_type','=', 'batch')]}"></field>
                	</xpath>
               	</data>
	        </field>
	    </record>
	</data>
</odoo>