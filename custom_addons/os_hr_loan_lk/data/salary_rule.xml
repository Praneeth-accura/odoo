<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="os_hr_loan_rule_lr" model="hr.salary.rule">
            <field name="name">Loan Repayment</field>
            <field name="sequence" eval="135"/>
            <field name="code">LR</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (inputs.LR and inputs.LR.amount or 0) * -1</field>
            <field name="loan_repayment" eval="True"></field>
        </record>
        
        <record id="hr_rule_input_loan_r" model="hr.rule.input">
            <field name="code">LR</field>
            <field name="name">Loan Repayment</field>
            <field name="input_id" ref="os_hr_loan_rule_lr"/>
        </record>
    </data>
</odoo>