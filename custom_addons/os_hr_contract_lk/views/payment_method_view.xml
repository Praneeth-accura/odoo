<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!-- Payment Method View -->
    <record id="view_payment_method_form" model="ir.ui.view">
    	<field name="name">hr.payment.method.form</field>
    	<field name="model">payment.method</field>
    	<field name="arch" type="xml">
        	<form string="Payment Method">
            	<group>
                	<field name="name" required="1"/>
            	</group>
        	</form>
    	</field>
     </record>
     
     <record id="view_payment_method_tree" model="ir.ui.view">
     	<field name="name">hr.payment.method.tree</field>
     	<field name="model">payment.method</field>
    	<field name="arch" type="xml">
        	<tree string="Payment Method">
            	<field name="name"/>
         	</tree>
     	</field>
     </record>
     
     <record id="open_module_view_payment_method" model="ir.actions.act_window">
     	<field name="name">Payment Method</field>
     	<field name="res_model">payment.method</field>
     	<field name="view_type">form</field>
     	<field name="view_mode">tree,form</field>
     	<field name="help" type="html">
       		<p class="oe_view_nocontent_create">
         		Click to create a payment method.
       		</p>
     	</field>
     </record>
     
     <menuitem id="menu_payment_method" action="open_module_view_payment_method" name="Payment Method" 
     parent="hr.menu_human_resources_configuration" sequence="97"/>
     
</odoo>