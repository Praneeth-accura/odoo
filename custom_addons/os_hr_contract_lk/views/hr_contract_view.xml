<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- contract Inherit View -->
	<record id="hr_contract_inherit_form" model="ir.ui.view">
    	<field name="name">hr.contract.inherit.form</field>
    	<field name="model">hr.contract</field>
    	<field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
    	<field name="arch" type="xml">
	    	<data>
	    		<xpath expr="//div[@name='wage']" position="after">
                	<field name="payment_method"/>
	    		</xpath>
	    		<xpath expr="//group[@name='salary_and_advantages']" position="after">
	    			<group colspan="4">
	    				<group>
	    					<field name="epf" />
			    			<field name="etf" />
			    		</group>
			    		<group>
			    			<field name="ot_liable" />
			    			<field name="pay_attendance" />
			    		</group>
		    		</group>
	    		</xpath>
	    	</data>
    	</field>
    </record>
      
</odoo> 
