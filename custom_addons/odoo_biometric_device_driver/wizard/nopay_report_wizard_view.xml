<odoo>
	<data>
	    <record id="nopay_report_wizard_form" model="ir.ui.view">
	        <field name="name">nopay.report.wizard.form</field>
	        <field name="model">nopay.report.wizard</field>
	        <field name="arch" type="xml">
		        <form>
		        	<field name="is_printed" nolabel="1" readonly="1" invisible="1"/>
		        	<group colspan="4" attrs="{'invisible': [('is_printed','=',True)]}">
		        		<group>
                            <field name="report_type" required="True"/>
		        		</group>
		        		<group>
		        			<field name="date_from" required="True"/>
		        			<field name="date_to" required="True"/>
		        		</group>
		        	</group>
                    <group colspan="4" attrs="{'invisible': [('is_printed','=',True)]}">
                        <field name="employee_ids" nolabel="1" attrs="{'invisible': [('report_type','!=','employee')]}"/>
                    </group>
                    <group colspan="4" attrs="{'invisible': [('is_printed','=',True)]}">
                        <field name="department_id" nolabel="0" attrs="{'invisible': [('report_type','!=','department')]}"/>
                    </group>
		        	<group attrs="{'invisible': [('is_printed','!=',True)]}" colspan="4">
		            	<field widget="binary" name="report_file" nolabel="1" filename="report_name" colspan="4"/>
	                    <field name="report_name" nolabel="1" readonly="1" invisible="1"/>
		            </group>
		            <footer>
		                <button name="export_nopay_xlsx" string="Export" type="object"
		                		class="oe_highlight" attrs="{'invisible': [('is_printed','=',True)]}"/>
		                <button name="action_back" string="Back" class="btn btn-default"
		                		type='object' attrs="{'invisible': [('is_printed','!=',True)]}"/>
		                <button string="Cancel" class="oe_link" special="cancel" />
		            </footer>
		        </form>
	        </field>
	    </record>
	    <record id="action_view_nopay_report_wizard_form" model="ir.actions.act_window">
	            <field name="name">Nopay Report</field>
	            <field name="type">ir.actions.act_window</field>
	            <field name="res_model">nopay.report.wizard</field>
	            <field name="view_type">form</field>
	            <field name="view_mode">form</field>
	            <field name="view_id" ref="nopay_report_wizard_form"/>
	            <field name="target">new</field>
	    </record>

	    <menuitem
	        	action="action_view_nopay_report_wizard_form"
	            id="menu_nopay_report_wizard"
	            parent="hr_attendance.menu_hr_attendance_manage_attendances"
	            sequence="25"
	    />
	</data>

</odoo>