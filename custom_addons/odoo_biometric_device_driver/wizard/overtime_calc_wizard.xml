<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <record id="overtime_calc_wizard_form" model="ir.ui.view">
	        <field name="name">overtime.calc.wizard.form</field>
	        <field name="model">overtime.calc.wizard</field>
	        <field name="arch" type="xml">
		        <form>
		            <p class="oe_grey">
     					<h4>This will calculate Overtime of previous month</h4>
                   	</p>
		            <footer>
		                <button name="calculate_ot" string="Calculate" type="object" class="oe_highlight"/>
		                <button string="Cancel" class="oe_link" special="cancel" />
		            </footer>
		        </form>
	        </field>
	    </record>
	    <record id="action_view_overtime_calc_wizard_form" model="ir.actions.act_window">
	            <field name="name">Calculate Over Time</field>
	            <field name="type">ir.actions.act_window</field>
	            <field name="res_model">overtime.calc.wizard</field>
	            <field name="view_type">form</field>
	            <field name="view_mode">form</field>
	            <field name="view_id" ref="overtime_calc_wizard_form"/>
	            <field name="target">new</field>
	    </record>

	    <menuitem
	        	action="action_view_overtime_calc_wizard_form"
	            id="menu_overtime_calc_wizard"
	            parent="hr_attendance.menu_hr_attendance_manage_attendances"
	            sequence="25"
	            groups="hr_attendance.group_hr_attendance_manager,hr_payroll.group_hr_payroll_manager"
	    />
	</data>
</odoo>
