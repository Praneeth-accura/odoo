<odoo>
    <data>
        <record id="inherit_employee_view" model="ir.ui.view">
            <field name="name">inherit.employee.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="inside">
                    <group string='Monthly Late Attendance'>
                        <field name='late_list' nolabel="1" readonly="1">
                            <tree editable='bottom'>
                                <field name='month'/>
                                <field name='duration' widget="float_time"/>
                                <field name='year'/>
                            </tree>
                        </field>
                    </group>
                    <group string='Monthly Overtime Attendance'>
                        <field name='monthly_overtime_list' nolabel="1" readonly="1">
                            <tree editable='bottom'>
                                <field name='month'/>
                                <field name='duration' widget="float_time"/>
                                <field name='year'/>
                            </tree>
                        </field>
                    </group>
                    <group string='Weekly Overtime Attendance'>
                        <field name='_over_time_per_week_list' nolabel="1" readonly="1">
                            <tree editable='bottom'>
                                <field name="week"/>
                                <field name='month'/>
                                <field name='duration' widget="float_time"/>
                                <field name='year'/>
                            </tree>
                        </field>
                    </group>
                    <group string='Monthly Wise Late Days Per Year'>
                        <field name='monthly_late_attendance_lines' nolabel="1">
                            <tree delete="0" editable="bottom">
                                <field name="number"/>
                                <field name='month'/>
                                <field name='late_days_per_month'/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>