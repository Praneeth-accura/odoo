<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- inherit view of Contact Form : adding the "Assigned Department" field -->
        <record id="res_partner_view_form_base_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.base.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                    <page string="CRM" name="crm">
                        <group>
                            <field name="assigned_departments" widget="many2many_tags"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='lang']" position="after">
                    <field name="other_name"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>