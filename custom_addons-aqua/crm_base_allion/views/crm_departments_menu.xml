<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.actions.act_window" id="crm_department_action">
        <field name="name">Departments</field>
        <field name="res_model">crm.departments</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="crm_department_tree_view"/>
        <field name="context">{"search_default_user_id":uid}</field>
        <field name="search_view_id" ref="view_crm_department_filter"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_crm_department_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_department_tree_view"/>
        <field name="act_window_id" ref="crm_department_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_crm_department_form">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm_department_form_view"/>
        <field name="act_window_id" ref="crm_department_action"/>
    </record>

    <menuitem name="Departments" id="menu_crm_departments" parent="crm.crm_menu_config" sequence="5" action="crm_department_action"/>

</odoo>
