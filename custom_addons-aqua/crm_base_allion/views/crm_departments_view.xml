<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Department Tree View -->
    <record model="ir.ui.view" id="crm_department_tree_view">
        <field name="name">CRM - Department Tree</field>
        <field name="model">crm.departments</field>
        <field name="arch" type="xml">
            <tree string="Departments">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>

                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Department Form View -->
    <record model="ir.ui.view" id="crm_department_form_view">
        <field name="name">CRM - Department Form</field>
        <field name="model">crm.departments</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet string="Department">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Department Search View  -->
    <record id="view_crm_department_filter" model="ir.ui.view">
        <field name="name">CRM - Department Search</field>
        <field name="model">crm.departments</field>
        <field name="arch" type="xml">
            <search string="Search Departments">
                <field name="name" string="Departments"/>
                <field name="active"/>
                <group expand="0" string="Group By">
                    <filter string="Active" domain="[]" context="{'group_by':'active'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
