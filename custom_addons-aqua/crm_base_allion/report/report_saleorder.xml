<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_saleorder_inherit_report" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                    <div class="page">
                        <div class="oe_structure"/>
                            <div class="crm_sale_report">
                                <h4  align="center">
                                    <span t-if="doc.state not in ['draft','sent']">Sales Order</span>
                                    <span t-if="doc.state in ['draft','sent']">Quotation</span>
                                </h4>
                            </div>
                            <table width="100%">
                                <tr>
                                    <td width="100%" style="border: 1px solid black;padding:5px;">
                            <table width="100%">
                                <tr>
                                    <td width="23%">Customer Name </td>
                                    <td width="2%">:</td>
                                    <td width="25%"><span t-field="doc.partner_id" t-field-options='{"widget": "contact", "fields": ["name"], "no_marker": true}'/></td>
                                    <td width="23%">Date </td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']">
                                            <span t-field="doc.confirmation_date"/>
                                        </div>
                                        <div t-if="doc.date_order and doc.state in ['draft','sent']">
                                            <span t-field="doc.date_order"/>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="23%">Customer Address </td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.partner_id" t-field-options='{"widget": "contact", "fields": ["street","street2","city","country_id"], "no_marker": true}'/>
                                    </td>
                                    <td width="23%">Quotation No </td>
                                    <td width="2%">:</td>
                                    <td width="25%"><span t-field="doc.name"/></td>
                                </tr>
                                <tr>
                                    <td width="23%">Telephone No </td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.partner_id" t-field-options='{"widget": "contact", "fields": ["phone"], "no_marker": true}'/>
                                    </td>
                                    <td width="23%">Prepared By </td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.user_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="23%">Contact Person </td>
                                    <td width="2%">:</td>
                                    <td width="25%"></td>
                                     <td width="23%">Tax Type</td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.tax_type"/>
                                    </td>
                                </tr>
                                 <tr>
                                    <td width="23%">Job Costing Code </td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.job_costing_code"/></td>
                                     <td width="23%">Delivery Date</td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.delivery_date"/>
                                    </td>
                                </tr>
                                 <tr>
                                    <td width="23%">Installation Date</td>
                                    <td width="2%">:</td>
                                    <td width="25%">
                                        <span t-field="doc.installation_date"/>
                                    </td>
                                </tr>
                            </table>
                        </td></tr></table>
                                    <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                                    <t t-foreach="doc.order_lines_layouted()" t-as="page">                        
                            <table width="100%" border="1px solid black">
                                <tr style="height:50px;">
                                    <td style="border: 1px solid black;vertical-align:middle;padding:5px;" width="25%">
                                        Job Description
                                    </td>
                                    <td style="border: 1px solid black;vertical-align:middle;" width="75%" colspan="3">
                                    </td>
                                </tr>
                                 <tr style="height:30px;">
                                        <th style="border: 1px solid black;padding:5px;" class="text-center">Description</th>
                                        <th style="border: 1px solid black;padding:5px;" class="hidden">Source Document</th>
                                        <th style="border: 1px solid black;padding:5px;" class="text-center">Quantity</th>
                                        <th style="border: 1px solid black;padding:5px;" class="text-center">Unit Price</th>
                                        <th style="border: 1px solid black;padding:5px;" t-if="display_discount" class="text-right">Disc.(%)</th>
                                        <!-- <th style="border: 1px solid black;padding:5px;" class="text-right">Taxes</th> -->
                                        <th style="border: 1px solid black;padding:5px;" class="text-center">Amount</th>
                                        <!-- <th style="border: 1px solid black;" groups="sale.group_show_price_total">Total Price</th> -->
                                    </tr>
                                    <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size &gt; 1 or page_size &gt; 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr style="height:30px;">
                                    <td width="40%" style="padding:5px;border-right: 1px solid black;border-left: 1px solid black;"><span t-field="l.name"/></td>
                                    <td width="20%" class="text-right" style="padding:5px;border-right: 1px solid black;border-left: 1px solid black;">
                                        <span t-field="l.product_uom_qty"/>
                                        <span t-field="l.product_uom" groups="product.group_uom"/>
                                    </td>
                                    <td width="20%" class="text-right" style="padding:5px;border-right: 1px solid black;border-left: 1px solid black;">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line" style="padding:5px;border-left: 1px solid black;padding:5px;">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <!-- <td class="text-right" style="border-right: 1px solid black;border-left: 1px solid black;">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                    </td> -->
                                    <td class="text-right" groups="sale.group_show_price_subtotal" style="padding:5px;border-right: 1px solid black;border-left: 1px solid black;">
                                        <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </td>
                                    <!-- <td style="border-right: 1px solid black;border-left: 1px solid black;" class="text-right" groups="sale.group_show_price_total">
                                        <span t-field="l.price_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </td> -->
                                </tr>


                            </t>
                             <t t-if="(layout_category_size &gt; 1 or page_size &gt; 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                <tr style="border: 1px solid black;" class="text-right">
                                    <td style="border: 1px solid black;border-right: 1px solid black;border-left: 1px solid black;" colspan="6">
                                        <strong>Subtotal: </strong>
                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                        <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>

                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;padding:5px;"><strong><u>Add:</u></strong></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;">NBT 2%</td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;" class="text-right"><span t-field="doc.nbt_tax"/></td>
                        </tr>

                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;">VAT 15%</td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;" class="text-right"><span t-field="doc.normal_tax"/></td>
                        </tr>
                        <br></br>
                        
                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"><strong><u>Less:</u></strong></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;">Discount</td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;" class="text-right"><!--span t-field="doc.amount_discount"/--></td>
                        </tr>
                        <br></br>
                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;">Grand Total</td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;padding:5px;" class="text-right"><strong><span t-field="doc.amount_total"/></strong></td>
                        </tr>
                        <tr style="height:30px;">
                            <td style="border-right: 1px solid black;border-left: 1px solid black;border-bottom: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;border-bottom: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;border-bottom: 1px solid black;padding:5px;"></td>
                            <td style="border-right: 1px solid black;border-left: 1px solid black;border-bottom: 1px solid black;padding:5px;"></td>
                        </tr>
                        <tr style="height:50px;">
                            <td  align="left" colspan="5" style="bordercrm_base_allion->report:1px solid black;vertical-align:middle;padding:5px;" width="100%">
                                Amount in Words :
                                <span t-field="doc.spell_total"/> only.
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black;vertical-align:middle;padding:5px;" width="75%" colspan="5">
                                <p>
                                <strong>Payment Terms :</strong>100% on Order Confirmation
                                <br></br>
                                <strong>Payment Methods :</strong>Please, draw the cheque in fovour of Aqua Masters (Pvt) Ltd
                                <br></br>
                                </p>
                                <p align="center"><strong>Service Hotline :</strong> 0017221664 </p>
                            
                            </td></tr>

                            </table>
                        </t>
                        <div class="oe_structure"/>
                    </div>
                </t> 
            </xpath>
        </template>

        <template id="report_saleorder">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale.report_saleorder_document')"/>
                </t>
            </t>
        </template>

        <template id="report_saleorder_document2">
            <t t-call="crm_base_allion.external_layout2">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                <div class="page">
                    <div class="oe_structure"/>
                    <h1 style="text-align:center;">
                        <strong><span t-if="doc.state not in ['draft','sent']">SALES ORDER</span></strong>
                        <strong><span t-if="doc.state in ['draft','sent']">ESTIMATE</span></strong>
                    </h1>
                    <div class="row">
                        <div class="col-xs-6">
                        </div>
                        <div class="col-xs-6">
                            <table style="border-collapse: collapse; border: 2px solid black; margin-left: 50px;">
                                <tr style="border: 1px solid black; height: 40px;">
                                    <th style="border: 2px solid black; width: 230px; text-align: center; vertical-align: middle; font-size: 22px;"><span>Estimate No</span></th>
                                    <td style="border: 2px solid black; width: 230px; text-align: center; vertical-align: middle; font-size: 22px;"><span t-field="doc.name"></span></td>
                                </tr>
                                <tr style="border: 2px solid black; height: 40px">
                                    <th style="border: 2px solid black; width: 230px; text-align: center; vertical-align: middle; font-size: 22px;"><span>Date</span></th>
                                    <td style="border: 2px solid black; width: 230px; text-align: center; vertical-align: middle; font-size: 22px;"><span t-field="doc.date_order" t-options ='{"format": "dd/MM/yyyy"}'></span></td>
                                </tr>
                            </table>
                        </div>
                        <strong><span style="font-size: 22px; margin-bottom: 25px;">Client:</span></strong> <br/>
                        <div class="col-xs-4" style="border-style: solid; border-width: 2px; height: 160px; width: 310px; font-size: 18px;">
                            <div t-field="doc.partner_id"
                                 t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        </div>
                        <table class="table table-condensed" style="border-style: solid; border-width: 2px; font-size: 20px;">
                            <thead>
                                <tr>
                                    <th style="border-style: solid; border-width: 2px; width: 350px;">Description</th>
                                    <!--<th>Taxes</th>-->
                                    <th style="border-style: solid; border-width: 2px; width: 200px;" class="text-center">Rate</th>
                                    <th style="border-style: solid; border-width: 2px; width: 200px;" class="text-center">Quantity</th>
                                    <th style="border-style: solid; border-width: 2px; width: 200px;" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                                    <th style="border-style: solid; border-width: 2px; width: 200px;" class="text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody" style="height: 200px;">
                                <tr t-foreach="doc.order_line" t-as="l">
                                    <td style="border-style: solid; border-width: 2px; border-bottom-style: none">
                                        <span t-field="l.name"/>
                                    </td>
                                    <!--<td style="border-style: solid; border-width: 2px; border-bottom-style: none;">-->
                                    <!--<span t-esc="', '.join(map(lambda x: x.name, l.tax_id))"/>-->
                                    <!--</td>-->
                                    <td style="border-style: solid; border-width: 2px; border-bottom-style: none;" class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td style="border-style: solid; border-width: 2px; border-bottom-style: none;" class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                        <span groups="product.group_uom" t-field="l.product_uom"/>
                                    </td>
                                    <td style="border-style: solid; border-width: 2px; border-bottom-style: none;" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td style="border-style: solid; border-width: 2px; border-bottom-style: none;" class="text-right">
                                        <span t-field="l.price_subtotal"
                                              t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border-style: solid; border-width: 2px; height: 100px"></td>
                                    <!--<td></td>-->
                                    <td style="border-style: solid; border-width: 2px;"></td>
                                    <td style="border-style: solid; border-width: 2px;"></td>
                                    <td style="border-style: solid; border-width: 2px;"></td>
                                </tr>
                            </tbody>
                            <tr style="font-size: 18px;">
                                <td style="border-style: solid; border-width: 2px;" rowspan="7" colspan="2">Payment Information:
                                    <br/> Cheque Payments:
                                    <br/> 1. Please draw cheque in favour of "Onestep Solutions (Pvt) Ltd" with "A/C Payee" crossing
                                    <br/>
                                    <br/> Information for Wire Transfer:
                                    <br/> Bank Name: Commercial Bank of Ceylon PLC
                                    <br/> Branch Name: Nawala Branch
                                    <br/> Bank Address: 157, Nawala Road, Nugegoda,
                                    <br/> Sri Lanka.
                                    <br/> Account Number: 1180007033
                                    <br/> SWIFT CODE: CCEYLKLX
                                </td>
                                <td style="border-style: solid; border-width: 2px;"><strong>Subtotal</strong></td>
                                <td style="border-style: solid; border-width: 2px;" class="text-right">
                                    <span t-field="doc.amount_untaxed"
                                          t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border-style: solid; border-width: 2px;"><strong>NBT</strong></td>
                                <td style="border-style: solid; border-width: 2px;" class="text-right">
                                    <span t-field="doc.amount_tax"
                                          t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border-style: solid; border-width: 2px;"><strong>Total</strong></td>
                                <td style="border-style: solid; border-width: 2px;" class="text-right">
                                    <span t-field="doc.amount_total"
                                          t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr></tr>
                            <tr></tr>
                            <tr></tr>
                            <tr></tr>
                        </table>
                    </div>
                    <p style="text-align: right; font-size: 18px;">
                        This is a computer generated invoice, hence no signature is required.
                    </p>
                    <div class="oe_structure"/>
                </div>
            </t>
        </template>


        <template id="report_saleorder2">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="crm_base_allion.report_saleorder_document2" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
