<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_invoice_inherit_report" inherit_id="account.report_invoice_document_with_payments">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <table width="100%"><tr><td align="left">
                        <table width="100%">
                            <tr>
                                <td style="border: 1px solid black;padding:5px;"><strong style="font-size: 17px;">Bill To:</strong>
                                    <!-- <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                                    <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p> -->
                                    <span t-field="o.partner_id"
                                     t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                                </td>
                            </tr>
                        </table></td>
                        <td align="right">
                            <table width="50%" border="1px solid black">
                            <tr>
                                <td style="border: 1px solid black;padding:5px;text-align:center" colspan="2" ><strong style="font-size: 22px;">Invoice</strong></td>
                            </tr>
                            <tr style="text-align:center;vertical-align:middle;">
                                <td style="border: 1px solid black;padding:5px;">Date:</td>
                                <td style="border: 1px solid black;padding:5px;"><span t-field="o.date_invoice" t-options ='{"format": "dd/MM/yyyy"}'/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black;padding:5px;">Invoice No :</td>
                                <td style="border: 1px solid black;padding:5px;"><span t-field="o.number"/></td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black;padding:5px;">Purchase Order No:</td>
                                <td style="border: 1px solid black;padding:5px;"></td>
                            </tr>
                        </table></td></tr></table>

                    <br></br>
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <div>
                        <table class="table table-condensed" style="border-style: solid;">
                            <thead>
                                    <tr>
                                        <th style="border: 1px solid black;padding:5px;">Description</th>
                                        <th style="border: 1px solid black;padding:5px;" class="hidden">Source Document</th>
                                        <th style="border: 1px solid black;padding:5px;">Quantity</th>
                                        <th style="border: 1px solid black;padding:5px;">Unit Price</th>
                                        <th style="border: 1px solid black;padding:5px;" t-if="display_discount" class="text-right">Disc.(%)</th>
                                        <th style="border: 1px solid black;padding:5px;" class="text-right">Taxes</th>
                                        <th style="border: 1px solid black;padding:5px;" class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody" style="height: 200px;">
                                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                                        <td style="border: 1px solid black;padding:5px;">
                                            <span t-field="l.name"/>
                                        </td>
                                        <td style="border: 1px solid black;padding:5px;">
                                            <span t-field="l.quantity"/>
                                            <span groups="product.group_uom" t-field="l.uom_id"/>
                                        </td>
                                        <td style="border: 1px solid black;padding:5px;">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" style="border: 1px solid black;padding:5px;" class="text-right">
                                            <span t-field="l.discount"/>
                                        </td>
                                        <td style="border: 1px solid black;padding:5px;" class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                        </td>
                                        <td style="border: 1px solid black;padding:5px;">
                                            <span t-field="l.price_subtotal"
                                                  t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table width="100%">
                        <tr style="border: 1px solid black;">
                            <td rowspan="4" style="border: 1px solid black;padding:5px;" width="65%">
                                <p><strong><u>Terms &amp; Conditions</u></strong></p>
                                <p>E. &amp; O.E
                                    <br></br>
                                        1. Goods, once sold will not be taken back
                                    <br></br>
                                        2. Intrest @ 18% P/A will be charged if the payment is not made within the stipulated time.
                                    
                                    <br></br>
                                    3. Cheque should be in favor of Aqua Masters (Pvt) Ltd &amp; Crossed A/C Payee Only
                                </p>
                            </td>
                            <td style="border: 1px solid black;padding:5px;"><strong>Subtotal</strong></td>
                            <td style="border: 1px solid black;padding:5px;" class="text-right">
                                        <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr style="border-bottom:1px solid #dddddd;">
                                    <td style="border: 1px solid black;padding:5px;"><strong>NBT</strong></td>
                                    <td style="border: 1px solid black;padding:5px;" class="text-right">
                                        <span t-field="o.nbt_tax"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                        </tr>
                        <tr style="border-bottom:1px solid #dddddd;">
                                    <td style="border: 1px solid black;padding:5px;"><strong>VAT</strong></td>
                                    <td style="border: 1px solid black;padding:5px;" class="text-right">
                                        <span t-field="o.normal_tax"
                                              t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                        </tr>
                            <tr class="border-black">
                                <td style="border: 1px solid black;padding:5px;"><strong>Total</strong></td>
                                <td style="border: 1px solid black;padding:5px;" class="text-right">
                                                <span t-field="o.amount_total"
                                                      t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                </table>

                    </div>
                    <br></br>
                    <br></br>
                    <br></br>
                <table width="100%">
                    <tr style="text-align:center;vertical-align:middle;">
                        <td>.........................</td>
                        <td>.........................</td>
                        <td>.........................</td>
                    </tr>
                    <tr style="text-align:center;vertical-align:middle;">
                        <td>Prepared By</td>
                        <td>Verified By</td>
                        <td>Approved By</td>
                    </tr>
                    </table>

                </div>
            </xpath>
        </template>
    </data>
</openerp>
