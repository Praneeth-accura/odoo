            <br></br>
            <table class="table table-condensed" style="border: 1px solid black">
                <thead>
                    <tr style="border: 1px solid black">
                        <th style="border: 1px solid black"><strong>Description</strong></th>
                        <th style="border: 1px solid black"><strong>Taxes</strong></th>
                        <!-- <th class="text-center" style="border: 1px solid black"><strong>Date Req.</strong></th> -->
                        <th class="text-right" style="border: 1px solid black"><strong>Qty</strong></th>
                        <th class="text-right" style="border: 1px solid black"><strong>Unit Price</strong></th>
                        <th class="text-right" style="border: 1px solid black"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-if="line.product_qty > 0" t-as="line" style="border: 1px solid black">
                        <td style="border: 1px solid black">
                            <span t-field="line.name"/>
                        </td>
                        <td style="border: 1px solid black">
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                        <!-- <td class="text-center" style="border: 1px solid black">
                            <span t-field="line.date_planned"/>
                        </td > -->
                        <td class="text-right" style="border: 1px solid black">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right" style="border: 1px solid black">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right" style="border: 1px solid black">
                            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed" style="border: 1px solid black">
                        <tr class="border-black" style="border: 1px solid black">
                            <td style="border: 1px solid black"><strong>Subtotal</strong></td>
                            <td class="text-right" style="border: 1px solid black">
                                <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr style="border: 1px solid black">
                            <td style="border: 1px solid black">Taxes</td>
                            <td class="text-right" style="border: 1px solid black">
                                <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr class="border-black" style="border: 1px solid black">
                            <td style="border: 1px solid black"><strong>Net Amount</strong></td>
                            <td class="text-right" style="border: 1px solid black">
                                <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <strong>Remarks :</strong><span t-field="o.notes"/>

