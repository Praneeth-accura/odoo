<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_view_order_form">
        <field name="name">inherit.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="is_done"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="inherit_mrp_production_form_view">
        <field name="name">inherit.mrp.production.form.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="sale_order_id" widget="selection" domain="[('is_done', '=', False)]" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>