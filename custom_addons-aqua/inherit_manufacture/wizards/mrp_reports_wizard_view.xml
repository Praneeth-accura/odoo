<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_reports_wizard_form" model="ir.ui.view">
            <field name="name">mrp.reports.wizard.form</field>
            <field name="model">mrp.reports</field>
            <field name="arch" type="xml">
                <form>
                    <field name="is_printed" nolabel="1" readonly="1" invisible="1"/>
                    <group colspan="4" attrs="{'invisible': [('is_printed','=',True)]}">
                        <group>
                            <field name="sale_order_id" widget="selection" required="1"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('is_printed','!=',True)]}" colspan="4">
                        <field widget="binary" name="report_file" nolabel="1" filename="report_name" colspan="4"/>
                        <field name="report_name" nolabel="1" readonly="1" invisible="1"/>
                    </group>
                    <footer>
                        <button name="print_xlsx_report" string="Export" type="object"
                                class="oe_highlight" attrs="{'invisible': [('is_printed','=',True)]}"/>
                        <button name="action_back" string="Back" class="btn btn-default"
                                type='object' attrs="{'invisible': [('is_printed','!=',True)]}"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_mrp_reports_wizard_form" model="ir.actions.act_window">
            <field name="name">MRP Reports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.reports</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mrp_reports_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
                action="action_mrp_reports_wizard_form"
                id="menu_mrp_reports"
                parent="mrp.menu_mrp_reporting"
                sequence="25"
                string="MRP Reports"
        />
    </data>
</odoo>
