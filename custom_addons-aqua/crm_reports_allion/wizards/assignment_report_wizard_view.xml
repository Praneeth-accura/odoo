<odoo>
	<data>
		<record id="assignment_report_wizard_form" model="ir.ui.view">
			<field name="name">assignment.report.wizard.form</field>
			<field name="model">assignment.report.wizard</field>
			<field name="arch" type="xml">
				<form>
					<field name="is_printed" nolabel="1" readonly="1" invisible="1"/>
					<group colspan="4" attrs="{'invisible': [('is_printed','=',True)]}">
						<group>
							<field name="report_type" required="True"/>
						</group>
						<group>
							<field name="date_from" required="True"/>
							<field name="date_to" required="True"/>
						</group>
					</group>
					<group attrs="{'invisible': [('is_printed','!=',True)]}" colspan="4">
						<field widget="binary" name="report_file" nolabel="1" filename="report_name" colspan="4"/>
						<field name="report_name" nolabel="1" readonly="1" invisible="1"/>
					</group>
					<footer>
						<button name="export_assignment_report" string="Export" type="object"
								class="oe_highlight" attrs="{'invisible': [('is_printed','=',True)]}"/>
						<button name="action_back" string="Back" class="btn btn-default"
								type='object' attrs="{'invisible': [('is_printed','!=',True)]}"/>
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		<record id="action_assignment_report_wizard_form" model="ir.actions.act_window">
			<field name="name">Assignment Reports</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">assignment.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="assignment_report_wizard_form"/>
			<field name="target">new</field>
		</record>

		<menuitem
				action="action_assignment_report_wizard_form"
				id="menu_assignment_report_wizard"
				parent="crm.crm_menu_report"
				sequence="25"
		/>
	</data>
</odoo>