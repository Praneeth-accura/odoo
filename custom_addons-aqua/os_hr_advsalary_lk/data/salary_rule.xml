<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="os_hr_rule_asr" model="hr.salary.rule">
            <field name="name">Advanced Salary Deduction</field>
            <field name="sequence" eval="133"/>
            <field name="code">ASD</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (inputs.ASD and inputs.ASD.amount or 0) * -1</field>
            <field name="advance_salary" eval="True"></field>
        </record>
        
        <record id="hr_rule_input_advance_salary_r" model="hr.rule.input">
            <field name="code">ASD</field>
            <field name="name">Advance Salary Deduction</field>
            <field name="input_id" ref="os_hr_rule_asr"/>
        </record>
    </data>
    
</odoo>