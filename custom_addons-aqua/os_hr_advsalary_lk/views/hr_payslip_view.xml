<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_hr_payslip_form_inherit2" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit2</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
        	<data>
	    		<xpath expr="//field[@name='input_line_ids']" position="after">
                	<separator string="Advance Salary Requests"/>
                    <field name="advance_salary_ids" domain="[('employee_id','=',employee_id),('state','=','approve'),('repaid','=',False),('deduct_from_salary','=',True)]">
                        <tree string="Salary Requests" editable="top">
                            <field name="reference_no"/>
                            <field name="created_date"/>
                            <field name="advance_amount"/>
                            <field name="repaid"/>
                        </tree>
                        <form string="Advance Salary Requests">
                            <group col="4">
                                <field name="reference_no"/>
	                            <field name="created_date"/>
	                            <field name="advance_amount"/>
	                            <field name="repaid"/>
                            </group>
                        </form>
                    </field>
	    		</xpath>
	    	</data>
    	</field>
	</record>
</odoo>