<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">	
       <record id="advance_salary_personal_rule" model="ir.rule">
	        <field name="name">Personal Advance Salary Requests</field>
	        <field ref="model_advance_salary_request" name="model_id"/>
	        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
	        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    	</record>
    	
	    <record id="advance_salary_all_rule" model="ir.rule">
	        <field name="name">All Advance Salary Requests</field>
	        <field ref="model_advance_salary_request" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('hr_payroll.group_hr_payroll_manager'))]"/>
	    </record>
	</data>
</odoo>