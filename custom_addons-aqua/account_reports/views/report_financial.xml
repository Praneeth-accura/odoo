<!--when print pdf of financial reports, this template will be used-->
<template id="ooa_print_template">
    <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
    <html>
        <head>
            <meta http-equiv="content-type" content="text/html; charset=utf-8" />
            <t t-call-assets="account_reports.ooa_assets_financial_report" t-js="False"/>
        </head>
        <body class="o_account_reports_body_print">
        </body>
    </html>
</template>

</data>
</odoo>
