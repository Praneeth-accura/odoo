<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record model="ir.module.category" id="module_category_hr_loans">
			<field name="name">Loans</field>
			<field name="description">Helps you manage your employee loans.</field>
			<field name="sequence">11</field>
		</record>
		
		<record id="group_loan_employee" model="res.groups">
	        <field name="name">Employee</field>
	        <field name="comment">the user will have an access to the employee loan creation only</field>
         	<field name="category_id" ref="module_category_hr_loans"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    	</record>
    	
		<record id="group_loan_manager" model="res.groups">
	        <field name="name">Manager</field>
	        <field name="comment">the user will have an access to the employee loan configuration as well as statistic reports.</field>
	        <field name="category_id" ref="module_category_hr_loans"/>
	        <field name="implied_ids" eval="[(4, ref('os_hr_loan_lk.group_loan_employee'))]"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    	</record>
    <data noupdate="1">	
       <record id="loan_personal_rule" model="ir.rule">
	        <field name="name">Personal Loans</field>
	        <field ref="model_loan_details" name="model_id"/>
	        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
	        <field name="groups" eval="[(4, ref('os_hr_loan_lk.group_loan_employee'))]"/>
    	</record>
    	
	    <record id="loan_see_all" model="ir.rule">
	        <field name="name">All Loans</field>
	        <field ref="model_loan_details" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('os_hr_loan_lk.group_loan_manager'))]"/>
	    </record>
	</data>
</odoo>