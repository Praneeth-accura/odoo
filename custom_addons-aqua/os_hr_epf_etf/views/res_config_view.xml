<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    	<record id="res_config_settings_view_form1" model="ir.ui.view">
            <field name="name">res.config.settings.view.form1.inherit.epf</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@id='hr_payroll_localization']" position="after">
                        <h2>EPF &amp; ETF</h2>
	                    <div class="row mt16 o_settings_container" id="hr_payroll_localization">
	                        <div class="col-md-6 col-xs-12 o_setting_box">
	                            <div class="o_setting_right_pane">
	                                <label string="Registration No."/>
	                                <div class="text-muted">
	                                    EPF &amp; ETF Registration Number of your Company
	                                </div>
	                                <div class="mt16" id="localization_text">
	                                    <field name="reg_no"/>
	                                </div>
	                            </div>
	                        </div>
	                    </div>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>