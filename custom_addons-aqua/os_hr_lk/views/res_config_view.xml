<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    	<record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.os_hr</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@data-key='hr']/div/div[2]" position="after">
                    	<div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="config_emp_code"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="row">
                                    <div class="text-muted col-md-8">
                                        Set default employee code used in employee form...
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="config_emp_code"
                                            class="o_light_label" widget="selection"/>
                                        <field name="prefix" attrs="{'invisible': [('config_emp_code','!=','auto')]}"
                                        	   placeholder="Enter prefix here (optional)"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>