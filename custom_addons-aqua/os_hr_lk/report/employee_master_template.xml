<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="employee_master_document">
    <t t-call="web.html_container">
        <t t-call="web.internal_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':en_US})" />
            <div class="page">
            	<div>
	                <h1 class="text-center mb32">
	                    <u>Employee Master</u>
	                </h1>
	            </div>
				<div>
					<span>Print Date : </span>
					<span t-field="doc.current_date"/>
				</div>
                <table class="table table-bordered mb32" style="table-layout:auto">
                    <thead>
                        <t t-set="i" t-value="1"/>
                        <tr>
                            <th class="text-left">Rec No.</th>
                            <th class="text-left">Emp Code.</th>
                            <th class="text-left">Full Name</th>
                            <th class="text-right">Basic Salary</th>
                            <th class="text-left">Designation</th>
                            <th class="text-left">Department</th>
                            <th class="text-center">NIC No.</th>
                            <th class="text-center">Join Date</th>
                            <th class="text-center">Acc No.</th>
                            <th class="text-center">Bank Code</th>
                            <th class="text-center">Branch Code</th>
                        </tr>
                   </thead>
                   <tbody>
                       <t t-foreach="doc.load_selected_details()" t-as="emp">
	                       <!-- Lines associated -->
	                       <t t-if="doc.basic_salary_from == 0 or doc.basic_salary_to == 0 or 
	                       			emp.contract_id.wage and emp.contract_id.wage >= doc.basic_salary_from and
	                       			emp.contract_id.wage &lt;= doc.basic_salary_to">
		                       <tr>	
		                           <td><span t-esc="i"/></td>
		                           <td class="text-left">
		                               <span t-field="emp.employee_code"/>
		                           </td>
		                           <td class="text-left">
		                               <span t-field="emp.name"/>
		                           </td>
		                           <td class="text-right">
		                           	   <t t-if="emp.contract_id.wage != 0">
		                               	  <span t-field="emp.contract_id.wage"/>
		                               </t>
		                               <t t-else="t-else">
		                               		<span>0</span>
		                               </t>
		                           </td>
		                           <td class="text-left">
		                               <span t-field="emp.job_id"/>
		                           </td>
		                           <td class="text-left">
		                               <span t-field="emp.department_id"/>
		                           </td>
		                           <td class="text-center">
		                               <span t-field="emp.identification_id"/>
		                           </td>
		                           <td class="text-center">
		                               <span t-field="emp.joining_date" t-field-options='{"format": "d-MMM-y"}'/>
		                           </td>
		                           <td class="text-center">
		                               <span t-field="emp.bank_account_id"/>
		                           </td>
		                           <td class="text-center">
		                               <span t-field="emp.bank.bic"/>
		                           </td>
		                           <td class="text-center">
		                               <span t-field="emp.branch.code"/>
		                           </td>
		                       </tr>
		                   </t>
	                       <t t-set="i" t-value="i+1"/>
	                   </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>

<template id="report_employee_master">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="os_hr_lk.employee_master_document" t-lang="en_US"/>
        </t>
    </t>
</template>

</odoo>