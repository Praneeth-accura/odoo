<?xml version="1.0" encoding="utf-8"?>
<odoo>
  
        <record id="view_employee_report_wizard" model="ir.ui.view">
            <field name="name">Employee Report</field>
            <field name="model">employee.master.report</field>
            <field name="arch" type="xml">
                <form string="Employee Report">
                    <p class="oe_grey">
                        This details will be used 	to filter the employees/leaves from complete database.
                    </p>
                    <group name="employee_primary" colspan="4" col="4">
                    	<field name="report_type" widget="selection"/>
                        <field name="employee_id"/>
                        <field name="dept_id" attrs="{'invisible':[('employee_id', '!=', False)]}"/>
                        <field name="job_id" attrs="{'invisible':['|',('employee_id', '!=', False),('report_type', '=', 'leave')]}"/>
                    </group>
                    <group colspan="4" col="4">
                    	<group string="Joining Date" colspan="2" col="2" attrs="{'invisible':['|',('employee_id', '!=', False),('report_type', '=', 'leave')]}">
							<field name="joining_date_from" class="oe_inline" />
							<field name="joining_date_to"  class="oe_inline"/>
						</group>
						<group string="Leave Date" colspan="2" col="2" attrs="{'invisible':[('report_type', '!=', 'leave')]}">
							<field name="leave_date_from" class="oe_inline" />
							<field name="leave_date_to"  class="oe_inline"/>
						</group>
						<group string="Basic Salary" colspan="2" col="2" attrs="{'invisible':['|',('employee_id', '!=', False),('report_type', '=', 'leave')]}">
							<field name="basic_salary_from" class="oe_inline"/>
                        	<field name="basic_salary_to" class="oe_inline"/>	
						</group>
	                </group>
                    <footer>
                        <button name="print_employee_report" string="Print PDF" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_employee_report" model="ir.actions.act_window">
            <field name="name">Employee Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.master.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        
        <menuitem id="menu_employee_report" action="action_view_employee_report" name="Reports" 
        parent="hr.menu_hr_root" sequence="97" groups="hr.group_hr_manager"/>

</odoo>
