<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--inventory reorders tree view-->
    <record id="inventory_reorder_tree_view" model="ir.ui.view">
        <field name="name">inventory.reorders.tree</field>
        <field name="model">inventory.reorders</field>
        <field name="arch" type="xml">
            <tree string="Inventory Reorders" edit="0" create="0" delete="1" editable="bottom">
                <field name="po_number" readonly="1"/>
                <field name="item" readonly="1"/>
                <field name="current_quantity" readonly="1"/>
                <field name="reorder_quantity" readonly="1"/>
                <field name="status" readonly="1"/>
                <field name="date" readonly="1"/>
            </tree>
        </field>
    </record>

    <!--today date filter-->
    <record id="inventory_reorder_filter" model="ir.ui.view">
        <field name="name">inventory.reorders.filter</field>
        <field name="model">inventory.reorders</field>
        <field name="arch" type="xml">
            <search string="Inventory Reorders">
                <filter string="Today" name="today"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
            </search>
        </field>
    </record>


    <!--inventory reorders action-->
    <record id="action_inventory_reorder_tree_view" model="ir.actions.act_window">
        <field name="name">Inventory Reorders</field>
        <field name="res_model">inventory.reorders</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <!--inventory reorder menu-->
    <menuitem id="menu_inventory_reorders"
              name="Inventory Reorders"
              parent="stock.menu_warehouse_report"
              sequence="111"
              action="action_inventory_reorder_tree_view"
              groups="stock.group_stock_manager"
    />
</odoo>
