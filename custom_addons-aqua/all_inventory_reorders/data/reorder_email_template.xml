<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--daily reorders email template-->
        <record id="email_template_daily_reorders" model="mail.template">
            <field name="name">Reorders Report</field>
            <field name="email_from"></field>
            <field name="subject">Reorders Report</field>
            <field name="email_to">${(object.emails or '')|safe}</field>
            <field name="model_id" ref="model_reorder"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
                <p>Reorder Report</p> <br/>

                <table width=100% style="border: thin solid black;">
                    <tr style="border: thin solid black;">
                        <th width="10%" style="border: thin solid black;text-align: center;">PO Number</th>
                        <th width="30%" style="border: thin solid black;text-align: center;">Item</th>
                        <th width="10%" style="border: thin solid black;text-align: center;">Current Quantity</th>
                        <th width="20%" style="border: thin solid black;text-align: center;">Reorder Level</th>
                        <th width="10%" style="border: thin solid black;text-align: center;">Reorder Quantity</th>
                        <th width="10%" style="border: thin solid black;text-align: center;">Status</th>
                        <th width="10%" style="border: thin solid black;text-align: center;">Date</th>
                    </tr>
                    % for i in object.reorder_lines:
                    <tr style="border: thin solid black;">
                        <td style="border: thin solid black;text-align: left;">${i.po_number}</td>
                        <td style="border: thin solid black;text-align: left;">${i.item.display_name or i.item.name}</td>
                        <td style="border: thin solid black;text-align: right;">${i.current_quantity}</td>
                        <td style="border: thin solid black;text-align: center;">min : ${i.reorder_min} - max: ${i.reorder_max}</td>
                        <td style="border: thin solid black;text-align: right;">${i.reorder_quantity}</td>
                        <td style="border: thin solid black;text-align: center;">${i.status}</td>
                        <td style="border: thin solid black;text-align: center;">${i.date}</td>
                    </td>
                    % endfor
                </table>
                ]]>
            </field>
        </record>
    </data>
</odoo>