<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<record id="view_tax_table_form" model="ir.ui.view">
		<field name="name">tax.table.form</field>
        <field name="model">tax.table</field>
        <field name="arch" type="xml">
        	<form string="Tax Table">
        		<sheet>
        			<group>
        			<div class="oe_title">
                  	     <label for="name" class="oe_edit_only"/>
                         <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    </group>
        			<group string="Annual Income Range and Rate">
	        			<field name="remuneration_range_ids" nolabel="1">
        					<tree editable="bottom">
        						<field name="range_from"/>
        						<field name="range_to"/>
        						<field name="amount_tax"/>
        					</tree>
        				</field>
        			</group>
        		</sheet>		
        	</form>
        </field>
    </record>
    
    <record id="action_view_tax_table" model="ir.actions.act_window">
		<field name="name">Tax Table</field>
  		<field name="res_model">tax.table</field>
    	<field name="view_type">form</field>
      	<field name="view_mode">tree,form</field> 
	</record>
    
    <menuitem 
		id="menu_view_tax_table" parent="hr_payroll.menu_hr_payroll_configuration"
		name="Tax Table" sequence="60"
		action="action_view_tax_table"/>
		
</odoo>