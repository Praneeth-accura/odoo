<odoo>
    <record model="ir.ui.view" id="hr_over_time_configuration_tree">
        <field name="name">hr.over.time.configuration.tree</field>
        <field name="model">hr.over.time.configuration</field>
        <field name="arch" type="xml">
            <tree string = "Over Time Policy Configuration">
                <field name="name"/>
                <field name="over_time"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_over_time_configuration">
        <field name="name">hr.over.time.configuration</field>
        <field name="model">hr.over.time.configuration</field>
        <field name="arch" type="xml">
            <form string = "Over Time Policy Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="over_time" required="True"/>
                            <field name="criteria" attrs="{'invisible' : [('over_time', '!=', 'yes')], 'required' : [('over_time', '!=', 'no')]}"/>
                        </group>
                        <group>
                            <field name="criteria_two" attrs="{'invisible' : ['|', ('criteria', '=', False), ('criteria', '=', 'monthly_work_time')], 'required' : ['|',('criteria', 'not in', ['monthly_work_time', False])]}"/>
                            <field name="days" attrs="{'invisible' : [('criteria', '!=', 'specific_day')], 'required' :[('criteria', 'in', ['specific_day'])]}"/>
                            <field name="time" attrs="{'invisible' : [('criteria_two', '!=', 'buffer_hours')], 'required' :[('criteria_two', '=', 'buffer_hours')]}" widget="float_time"/>
                            <field name="time_period" attrs="{'invisible' : [('criteria_two', '!=', 'hourly')], 'required' : [('criteria_two', '=', 'hourly')]}"/>
                            <field name="time_for_month_ot" attrs="{'invisible' : [('criteria', '!=', 'monthly_work_time')], 'required' : [('criteria', '=', 'monthly_work_time')]}" widget="float_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_over_time_configuration_action">
        <field name="name">Over Time Policy Configuration</field>
        <field name="res_model">hr.over.time.configuration</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to config a new over time policy rule
            </p>
        </field>
    </record>

    <menuitem action="hr_over_time_configuration_action"
              id="menu_over_time_configuration_action"
              parent="main_menu_attendance_configuration_action"
              sequence="3"/>
</odoo>