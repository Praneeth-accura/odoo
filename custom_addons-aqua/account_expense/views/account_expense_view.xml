<odoo>
    <record id="account_expense_form_view" model="ir.ui.view">
        <field name="name">account.expense.form.view</field>
        <field name="model">account.expense</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="post_expense" type="object"  class="oe_highlight" string="Post" states="draft"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_journal_entry" string="Journal Entries" type="object" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible': [('state', '!=', 'post')]}"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" required="1"/>
                            <field name="journal" required="1" widget="selection"/>
                            <field name="check_no"/>
                            <field name="amount_in_words" invisible="1"/>
                            <field name="total_amount" invisible="0"/>
                        </group>
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="reference" required="1"/>
                            <field name="code" invisible="1"/>
                        </group>
                        <field name="line_ids">
                            <form>
                                <group>
                                    <group>
                                        <field name="name" required="1"/>
                                        <field name="account_id" required="1" widget="selection"/>
                                    </group>
                                    <group>
                                        <field name="debit" required="1"/>
                                        <field name="analytic_account_id"/>
                                        <field name="analytic_tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>
                                    </group>
                                </group>
                            </form>
                            <tree editable="bottom">
                                <field name="account_id" required="1"/>
                                <field name="name" required="1"/>
                                <field name="analytic_account_id"/>
                                <field name="analytic_tag_ids" widget="many2many_tags"/>
                                <field name="debit" required="1" sum="Total"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                          <field name="total_amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_expense_tree_view" model="ir.ui.view">
        <field name="name">account.expense.tree.view</field>
        <field name="model">account.expense</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="journal"/>
                <field name="reference"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_account_expense" model="ir.actions.act_window">
        <field name="name">Account Expense</field>
        <field name="res_model">account.expense</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="main_menu_account_expense" parent="account.menu_finance" sequence="3" name="Account Expenses"/>

    <menuitem action="action_account_expense"
              id="menu_account_expense"
              parent="main_menu_account_expense"
              sequence="0"/>
</odoo>
