<?xml version="1.0"?>
<odoo>

    <menuitem id="menu_aftersale" name="Help Desk"
              parent="crm.crm_menu_root"
              sequence="5" />
    <menuitem id="menu_services" name="Services"
              parent="menu_aftersale" sequence="1" />

    <menuitem id="menu_config_helpdesk" name="Help Desk Configurations"
              parent="menu_aftersale" sequence="2" groups="group_crm_manager,group_crm_director"/>

    <!-- Claims categories  -->

    <record id="crm_helpdesk_category_form" model="ir.ui.view">
        <field name="name">crm.helpdesk.category.form</field>
        <field name="model">crm.helpdesk.category</field>
        <field name="arch" type="xml">
            <form string="Help Desk Categories">
                <group>
                    <field name="name"/>
                    <field name="team_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="crm_helpdesk_category_tree" model="ir.ui.view">
        <field name="name">crm.helpdesk.category.tree</field>
        <field name="model">crm.helpdesk.category</field>
        <field name="arch" type="xml">
            <tree string="Help Desk Categories">
                <field name="name"/>
                <field name="team_id"/>
            </tree>
        </field>
    </record>

    <record id="crm_helpdesk_categ_action" model="ir.actions.act_window">
        <field name="name">Help Desk Categories</field>
        <field name="res_model">crm.helpdesk.category</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="crm_helpdesk_category_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a help desk category.
            </p><p>
            Create help desk categories to better manage and classify your
            help desk services. Some example of services can be: preventive action,
            corrective action.
        </p>
        </field>
    </record>

    <menuitem action="crm_helpdesk_categ_action" name="Categories"
              id="menu_helpdesk_case_claim-act" parent="menu_config_helpdesk" sequence="1"/>

    <!-- Technicians  -->

    <record id="crm_helpdesk_tech_form" model="ir.ui.view">
        <field name="name">crm.helpdesk.tech.form</field>
        <field name="model">crm.helpdesk.technician</field>
        <field name="arch" type="xml">
            <form string="Help Desk Technicians">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="mobile"/>
                        <field name="address"/>
                        <field name="user_id"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="crm_helpdesk_tech_tree" model="ir.ui.view">
        <field name="name">crm.helpdesk.tech.tree</field>
        <field name="model">crm.helpdesk.technician</field>
        <field name="arch" type="xml">
            <tree string="Help Desk Technicians">
                <field name="name"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="crm_helpdesk_tech_action" model="ir.actions.act_window">
        <field name="name">Help Desk Technicians</field>
        <field name="res_model">crm.helpdesk.technician</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="crm_helpdesk_tech_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a help desk technician.

            </p><p>
            Create help desk technicians to better manage and classify your
            services. Some example of help desk can be: preventive action,
            corrective action.
        </p>
        </field>
    </record>

    <menuitem action="crm_helpdesk_tech_action" name="Technicians" id="menu_crm_tech_helpdesk-act" parent="menu_config_helpdesk" sequence="3"/>

    <!-- Help Desk    -->

    <record model="ir.ui.view" id="crm_case_helpdesk_tree_view1">
        <field name="name">CRM - Help Desk Tree</field>
        <field name="model">crm.helpdesk</field>
        <field name="arch" type="xml">
            <tree string="Help Desk">
                <field name="token_no"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="technician_id"/>
                <field name="address"/>
                <field name="stage_id"/>
                <field name="date_action_next"/>
                <field name="action_next"/>
                <field name="date_deadline" invisible="1"/>
                <field name="date_closed" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_case_helpdesk_form_view1">
        <field name="name">CRM - Help Desk Form</field>
        <field name="model">crm.helpdesk</field>
        <field name="arch" type="xml">
            <form string="Help Desk">
                <header>
                    <button name="action_open" string="Open Token" class="oe_highlight" type="object" attrs="{'invisible': ['|', ('stage_id','=','open'), ('stage_id','=','closed')] }"/>
                    <button name="action_closed" string="Close Token" class="oe_highlight" attrs="{'invisible': [('stage_id','!=','open')] }" type="object"/>
                    <button name="action_incomplete" string="Incomplete Token" class="oe_highlight" attrs="{'invisible': [('stage_id','!=','open')] }" type="object"/>
                    <field name="stage_id" widget="statusbar" statusbar_visible="new,open,closed,incomplete"/>
                </header>
                <sheet string="Claims">
                    <div attrs="{'invisible': [('id','=',False)] }" class="oe_title">
                        <label for="token_no" class="oe_edit_only"/>
                        <h1>Token: <field name="token_no" /></h1>
                    </div>
                    <h4><strong>Caller Details</strong></h4>
                    <group groups="base.group_user">
                        <!-- <h4><strong>Caller Details</strong></h4> -->
                        <group>
                        <field name="partner_id" string="Partner"/>
                        <field name="partner_phone"/>
                        </group>
                        <group>
                        <field name="email_from" widget="email"/>
                        <field name="department_id"/>
                        </group>
                    </group>
                    <group groups="base.group_user">
                        <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="job_type"/>
                        <field name="machine_type"/>
                    </group>
                </group>
                    <group groups="base.group_user">
                        <group>
                            <field name="user_id" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager']}"/>
                            <field name="date_deadline"/>
                            <field name="priority" widget="radio"/>
                        </group>
                        <group>
                            <field name="calendar_start_date"/>
                            <field name="calendar_end_date"/>
                        </group>
                    </group>
                    <group colspan="4" col="4">
                        <notebook>
                            <page string="Description" >
                                <!-- <group colspan="2" col="2" groups="base.group_user">
                                    <separator colspan="2" string="Caller Details"/>
                                    <field name="partner_id" string="Partner"/>
                                    <field name="partner_phone"/>
                                    <field name="email_from" widget="email"/>
                                    <field name="department_id"/>
                                </group> -->
                                <group colspan="2" col="2" groups="base.group_user">
                                    <separator colspan="2" string="Assign Task To"/>
                                    <group>
                                        <field name="technician_id" attrs="{'readonly': ['|', ('stage_id','=', 'open'), ('stage_id','=', 'closed')] }"/>
                                        <field name="current_assigned_task" readonly="True"/>
                                    </group>
                                    <group>
                                        <field name="address"/>
                                        <field name="categ_id" options="{'no_create': True, 'no_open': True}"/>
                                    </group>
                                </group>
                                <separator colspan="4" string="Description" groups="base.group_user"/>
                                <field name="description" colspan="4" nolabel="1"/>
                            </page>
                            <page string="Follow Up" groups="base.group_user">
                                <group colspan="2" col="2">
                                    <separator colspan="2" string="Actions"/>
                                    <field name="date_action_next"/>
                                    <field name="action_next"/>
                                </group>
                                <group colspan="2" col="2" groups="base.group_user">
                                    <separator colspan="2" string="Dates"/>
                                    <field name="create_date"/>
                                    <field name="date_closed" invisible="1"/>
                                    <field name="write_date"/>
                                </group>

                                <group colspan="2" col="2">
                                    <separator colspan="2" string="Root Cause"/>
                                    <field name="cause" colspan="2" nolabel="1"/>
                                </group>
                                <group colspan="2" col="2">
                                    <separator colspan="2" string="Resolution Actions"/>
                                    <field name="type_action"/>
                                    <field name="resolution" colspan="2" nolabel="1" placeholder="Action Description..."/>
                                </group>
                            </page>
                            <page string="Call Log" groups="base.group_user">
                                <field name="phone_log_lines" nolabel="1" widget="one2many_list">
                                    <tree string="Call Log" editable="bottom">
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="partner_id"
                                               on_change="on_change_partner_id(partner_id)"/>
                                        <field name="partner_phone"
                                               invisible="1"/>
                                        <field name="partner_mobile"
                                               invisible="1"/>
                                        <field name="user_id" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'base.group_sale_salesman_all_leads']}"/>
                                        <!--<field name="categ_id" widget="selection"-->
                                        <!--domain="[('object_id.model', '=', 'crm.phonecall')]"-->
                                        <!--invisible="1"/>-->
                                        <field name="state" invisible="1"/>
                                        <field name="create_date" invisible="1"/>
                                        <field name="opportunity_id" invisible="1" on_change="on_change_opportunity(opportunity_id)"/>
                                        <button string="Schedule Other Call"
                                                icon="terp-call-start"
                                                name="action_make_meeting"
                                                type="object"/>
                                        <button string="Meeting"
                                                icon="gtk-redo"
                                                name="action_make_meeting" type="object"/>
                                        <button string="Convert to Opportunity"
                                                name="action_button_convert2opportunity"
                                                states="open,pending"
                                                icon="gtk-index"
                                                type="object" attrs="{'invisible':[('opportunity_id','!=',False)]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Help Desk Calendar view -->

    <record model="ir.ui.view" id="crm_case_helpdesk_calendar_view1">
        <field name="name">Help Desk Actions</field>
        <field name="model">crm.helpdesk</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <calendar string="Help Desk" date_start="date" color="user_id">
                <field name="token_no"/>
                <field name="partner_id"/>
                <field name="technician_id"/>
                <field name="date"/>
            </calendar>
        </field>
    </record>

    <!--Help Desk Kanban view-->

    <record model="ir.ui.view" id="crm_case_helpdesk_kanban_view1">
        <field name="name">CRM - Help Desk Kanban</field>
        <field name="model">crm.helpdesk</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban">
                <field name="name"/>
                <field name="technician_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <span>
                                        <field name="token_no"/>
                                    </span>
                                </strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">
                                    <strong>Customer: </strong><field name="partner_id"/>
                                </span>
                            </div>
                            <div>
                                <group>
                                    <strong>Assigned: </strong><field name="technician_id"/>
                                </group>
                            </div>
                            <div>
                                <strong>Date: </strong><field name="date"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--Help Desk Search view -->

    <record id="view_crm_case_helpdesk_filter" model="ir.ui.view">
        <field name="name">CRM - Help Desk Search</field>
        <field name="model">crm.helpdesk</field>
        <field name="arch" type="xml">
            <search string="Search Help Desk">
                <field name="partner_phone" string="Phone Number"/>
                <field name="name" string="Subject"/>
                <field name="token_no" string="Token No."/>
                <separator/>
                <filter string="Unassigned Tokens" domain="[('user_id','=', False)]" help="Unassigned Tokens" />
                <field name="partner_id" filter_domain="[('partner_id','child_of',self)]"/>
                <field name="user_id"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" domain="[]" help="Partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Stage" domain="[]" context="{'group_by':'stage_id'}"/>
                    <filter string="Type" domain="[]" context="{'group_by':'categ_id'}"/>
                    <filter string="Claim Month" domain="[]" help="Claim Date by Month" context="{'group_by':'date'}"/>
                    <filter string="Deadline" domain="[]" context="{'group_by':'date_deadline'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="crm_helpdesk_view_act1">
        <field name="name">Help Desk</field>
        <field name="res_model">crm.helpdesk</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar,kanban</field>
        <field name="search_view_id" ref="view_crm_case_helpdesk_filter" />
        <field name="view_id" ref="crm_case_helpdesk_tree_view1"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Record and track your customers' help desk. Help Desk may be linked to a sales order or a lot.You can send emails with attachments and keep the full history for a service (emails sent, intervention type and so on).Hep Desk Service may automatically be linked to an email address using the mail gateway module.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="action_crm_tag_tree_claim0">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_case_helpdesk_tree_view1"/>
        <field name="act_window_id" ref="crm_helpdesk_view_act1"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_crm_tag_calendar_claim0">
        <field name="sequence" eval="2"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="crm_case_helpdesk_calendar_view1"/>
        <field name="act_window_id" ref="crm_helpdesk_view_act1"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_crm_tag_form_claim0">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm_case_helpdesk_form_view1"/>
        <field name="act_window_id" ref="crm_helpdesk_view_act1"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_crm_tag_kanban_claim0">
        <field name="sequence" eval="3"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="crm_case_helpdesk_kanban_view1"/>
        <field name="act_window_id" ref="crm_helpdesk_view_act1"/>
    </record>

    <menuitem name="Help Desk Services" id="menu_crm_case_helpdesk"
              parent="menu_services" action="crm_helpdesk_view_act1" sequence="1" groups="group_crm_employee"/>


</odoo>
