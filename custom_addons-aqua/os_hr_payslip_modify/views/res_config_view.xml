<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
    	<record id="res_config_settings_view_form1_payslip" model="ir.ui.view">
            <field name="name">res.config.settings.view.form1.inherit.payslip</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="os_hr_epf_etf.res_config_settings_view_form1"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@id='hr_payroll_localization']" position="after">
                        <h2>Payslip Modification</h2>
	                    <div class="row mt16 o_settings_container" id="hr_payroll_modify">
	                        <div class="col-md-6 col-xs-12 o_setting_box">
	                            <div class="o_setting_right_pane">
	                                <label string="Enable Modification"/>
	                                <div class="text-muted">
	                                    Check here to enable pasylip modification
	                                </div>
	                                <div class="mt16" id="localization_text">
	                                    <field name="payslip_modify"/>
	                                </div>
	                            </div>
	                        </div>
	                    </div>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>