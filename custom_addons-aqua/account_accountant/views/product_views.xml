<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- add menu item for reach Product Categories from accounts-->
        <menuitem id="ooa_menu_product_product_categories"
        action="product.product_category_action_form"
        parent="account.account_management_menu" sequence="3"/>

        <!-- add menu item for reach Account Tags from accounts-->
        <menuitem id="ooa_account_tag_menu" parent="account.account_account_menu" action="account.account_tag_action" groups="base.group_no_one"/>
        <!-- add menu item for reach Account Groups from accounts-->
        <menuitem id="ooa_menu_account_group" parent="account.account_account_menu" action="account.action_account_group_tree" groups="base.group_no_one"/>

        <!-- rearrange access of following menu -->
        <record id="account.menu_finance_entries" model="ir.ui.menu">
            <field name="groups_id" eval="[(3, ref('account.group_account_user')), (4, ref('account.group_account_manager'))]"/>
        </record>
        <record id="account.menu_finance_configuration" model="ir.ui.menu">
            <field name="groups_id" eval="[(3, ref('account.group_account_manager')), (4, ref('account.group_account_user'))]"/>
        </record>
        <record id="account.menu_finance_reports" model="ir.ui.menu">
            <field name="groups_id" eval="[(3, ref('account.group_account_manager')), (4, ref('account.group_account_user'))]"/>
        </record>

        <!-- update res.partner form view for accounting purpose -->
        <record id="ooa_res_partner_view_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='accounting_entries']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//page[@name='accounting_disabled']" position="attributes">
                    <attribute name="string">Accounting</attribute>
                </xpath> 
                <xpath expr="//page[@name='accounting']" position="attributes">
                    <attribute name="string">Accounting</attribute>
                </xpath>
            </field>
        </record>

        <!-- assign accountant group to journal entries button in the payment -->
        <record id="ooa_account_payment_view_form" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_journal_entries']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>

        <!-- add groups to account data in the invoice -->
        <record id="ooa_account_invoice_view_form_supplier" model="ir.ui.view">
            <field name="name">account.invoice.form.supplier</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']//field[@name='account_id']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//page[@name='other_info']//field[@name='move_id']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_line_ids']//tree//field[@name='account_id']" position="attributes">
                    <attribute name="groups">account.group_account_invoice</attribute>
                </xpath>
            </field>
        </record>

        <!-- add groups to account data in the invoice -->
        <record id="ooa_account_invoice_view_form_customer" model="ir.ui.view">
            <field name="name">account.invoice.form.customer</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']//field[@name='move_id']" position="attributes">
                    <attribute name="groups">account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>

</odoo>
