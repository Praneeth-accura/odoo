<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="attendance_report_wizard_form_naag_inherit" model="ir.ui.view">
            <field name="name">attendance.report.wizard.form.naag.inherit</field>
            <field name="model">attendance.report.wizard</field>
            <field name="inherit_id" ref="attendance_report_wizard_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//form/group[1]" position="after">
                    <group colspan="4" attrs="{'invisible': [('is_printed','=',True)]}">
                        <field name="employee_ids" nolabel="1" attrs="{'invisible': [('report_from','!=','att_summary')]}"/>
                    </group>
                </xpath>
                <xpath expr="//form/group[1]//group[2]" position="after">
                    <group colspan="4" attrs="{'invisible': ['|',('is_printed','=',True), ('report_from','not in',['monthly_late_attendance','weekly_overtime','monthly_overtime'])]}">
                        <field name="year" attrs="{'required' : [('report_from', 'in', ['monthly_late_attendance','weekly_overtime','monthly_overtime'])]}"/>
                        <field name="month" attrs="{'required' : [('report_from', 'in', ['monthly_late_attendance','weekly_overtime','monthly_overtime'])]}"/>
                    </group>
                </xpath>
                <field name="report_from" position="after">
                	<field name="department_id" attrs="{'invisible': [('report_from','!=','att_summary')]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>